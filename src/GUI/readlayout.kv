#:kivy 1.8.0

<ReadLayout>:
    textOutput: textOutput
    subject: subject
    sender: sender
    BoxLayout:
        orientation: "vertical"
        Label:
            id: label
            size_hint: [1, 0.2]
            color: (0,0,0,1)
            disabled_color: (0,0,0,1)
            bold: True
            font_size: 40
            text: "Read"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                size_hint: [1, 0.1]
                Label:
                    size_hint: [0.2, 1]
                    bold: True
                    text: "Sender:"
                TextInput:
                    id: sender
                    tooltip: "The sender"
                    readonly: True
                    write_tab: False
                    text: ""
                Label:
                    size_hint: [0.2, 1]
                    bold: True
                    text: "Topic:"
                TextInput:
                    id: subject
                    tooltip: "The subject"
                    readonly: True
                    write_tab: False
                    text: ""
            ScrollView:
                id: scrlv
                scroll_type: ['bars']
                TextInput:
                    id: textOutput
                    tooltip: "The message"
                    text: ""
                    readonly: True
                    write_tab: False
                    # use_bubble: True
                    size_hint: 1, None
                    # max( (len(self._lines)+1) * self.line_height, scrlv.height)
                    height: max( (len(self._lines)+1) * self.line_height, scrlv.height)
            GridLayout:
                size_hint: [1, 0.2]
                rows: 1
                AnchorLayout:
                    align_h: "center"
                    Button:
                        size_hint: [None, None]
                        tooltip: "Switch to previous e-mail"
                        background_normal: "GUI/Icons/iPrevious.png"
                        on_release: root.previous_email()
                AnchorLayout:
                    align_h: "center"
                    Button:
                        size_hint: [None, None]
                        tooltip: "Reply to this e-mail"
                        background_normal: "GUI/Icons/iReply.png"
                        on_release: root.trigger_reply()
                AnchorLayout:
                    align_h: "center"
                    Button:
                        size_hint: [None, None]
                        tooltip: "Switch to next e-mail"
                        background_normal: "GUI/Icons/iNext.png"
                        on_release: root.next_email()
