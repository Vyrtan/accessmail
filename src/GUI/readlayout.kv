#:kivy 1.7.2

<ReadLayout>:
    textOutput: textOutput
    subject: subject
    BoxLayout:
        orientation: "vertical"
        Label:
            id: label
            size_hint: [1, 0.2]
            color: (0,0,0,1)
            disabled_color: (0,0,0,1)
            bold: True
            font_size: 40
            text: "Lesen"
        BoxLayout:
            orientation: "vertical"
            GridLayout:
                size_hint: [1, 0.1]
                rows: 1
                Button:
                    text: "Vorherige E-Mail"
                    on_press: root.previousEmail()
                Button:
                    text: "Antworten"
                    on_press: root.reply()
                Button:
                    text: "NÃ¤chste E-Mail"
                    on_press: root.nextEmail()
            TextInput:
                id: subject
                size_hint: [1, 0.1]
                text: "subject"
            ScrollView:
                id: scrlv
                TextInput:
                    id: textOutput
                    text: "text"
                    size_hint: 1, None
                    height: max( (len(self._lines)+1) * self.line_height, scrlv.height)