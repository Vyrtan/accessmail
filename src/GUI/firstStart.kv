#:kivy 1.8

<FirstStartLayout@BoxLayout>:
    BoxLayout:
        orientation: "vertical"
        Label:
            font_size: 34
            halign: "center"
            text: "Please choose your \n e-mail provider:"
        GridLayout:
            cols: 2
            # Button:
            #     text: "GMX"
            #     on_press: root.parent.selectedProvider(0)
            Button:
                text: "WEB.de"
                on_release: root.parent.selectedProvider(1)
            Button:
                text: "GMAIL"
                on_press: root.parent.selectedProvider(2)

        AnchorLayout:
            anchor_x: "center"
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iCancel.png"
                on_press: exit()
