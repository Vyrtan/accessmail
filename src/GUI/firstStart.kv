#:kivy 1.8

<FirstStartLayout@BoxLayout>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Program started for the first time"
        GridLayout:
            cols: 3
            Button:
                text: "GMX"
                on_press: root.parent.selectedProvider(0)
            Button:
                text: "WEB.de"
                on_release: root.parent.selectedProvider(1)
            Button:
                text: "GMAIL"
                on_press: root.parent.selectedProvider(2)


        Button:
            text: "Close"
            on_press: exit()
