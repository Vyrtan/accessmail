#:kivy 1.8

<Label>
    color: (0,0,0,1)
    disabled_color: (0,0,0,1)

<OutboxLayout>:
    grid: grid
    GridLayout:
        cols: 1
        spacing: 5
        Label:
            id: label
            size_hint: [1, 0.1]
            bold: True
            font_size: 40
            text: "Sent messages"
        GridLayout:
            id: grid
            cols: 1
            size_hint: [1, 0.7]
        BoxLayout:
            id: int_navigation
            size_hint: [1, 0.1]
            orientation: "horizontal"
            spacing: root.width / 6
            padding: [root.width / 6, 0]
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iPrevious.png"
                on_release: root.previous_page()
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iRefresh.png"
                on_release: root.scheduled_mail_check("lol")
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iNext.png"
                on_release: root.next_page()
            Label:
                bold: True
                font_size: 24
                text: root.pageCount