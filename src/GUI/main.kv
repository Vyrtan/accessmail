#:kivy 1.8

<Catalog@BoxLayout>:
    screen_manager: screen_manager
    buttons: menu.buttons

    MenuLayout:
        id: menu
        size_hint: [0.2,1]

    BoxLayout:
        id: reactive_layout

        ScreenManager:
            id: screen_manager
            Screen:
                name: "Overview"
                OverviewLayout:
            Screen:
                name: "Read"
                ReadLayout
            Screen:
                name: "Write"
                WriteLayout
            Screen:
                name: "Address"
                AddressLayout
