#:kivy 1.8

<Label>
    color: (0,0,0,1)
    color_disables: (0,0,0,1)

<ContactItem>:
    orientation: "horizontal"
    root: root
    size_hint: [1, 0.1]
    Label:
        text: root.name
    Label:
        text: root.email
    Label:
        text: root.subject
    AnchorLayout:
        align_v: "center"
        Button:
            size_hint: [None, None]
            background_normal: "GUI/Icons/iWrite.png"
            on_release: root.trigger_write_mail()
    AnchorLayout:
        align_v: "center"
        Button:
            size_hint: [None, None]
            background_normal: "GUI/Icons/iCancel.png"
            on_release: root.trigger_delete()
