#:kivy 1.8

<Label>
    color: (0,0,0,1)
    color_disables: (0,0,0,1)

<ContactItem>:
    canvas:
        Color:
            rgba: (0, 0, 0, 0.2) if not root.grey else (0, 0, 0, 0)
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
    orientation: "horizontal"
    root: root
    size_hint: [1, None]
    Button:
        size_hint: [None, None]
        background_normal: root.picture
        on_release: root.trigger_write_mail()
    Label:
        size_hint: [0.4, 1]
        font_size: 16
        text: root.name
    Label:
        font_size: 16
        text: root.email
    AnchorLayout:
        size_hint: [0.2, 1]
        align_v: "center"
        Button:
            size_hint: [None, None]
            background_normal: "GUI/Icons/iWrite.png"
            on_release: root.trigger_write_mail()
    AnchorLayout:
        size_hint: [0.2, 1]
        align_v: "center"
        Button:
            size_hint: [None, None]
            background_normal: "GUI/Icons/iCancel.png"
            on_release: root.trigger_delete()
