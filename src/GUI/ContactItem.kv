#:kivy 1.8

<Label>
    color: (0,0,0,1)

<ContactItem>:
    orientation: "horizontal"
    size_hint: [1, 0.1]
    Label:
        text: root.name
    Label:
        text: root.email
    Label:
        text: root.subject
    Button:
        text: "Write Mail"
        on_press: root.trigger_write_mail()
    Button:
        text: "Delete"
        on_press: root.trigger_delete()
