#:kivy 1.8

<DeletePopup>:
    size_hint: .5, .5
    auto_dismiss: False
    title: 'Confirm delete'
    title_color: (0,0,0,1)
    background: "GUI/Icons/white_bg_400x400.png"
    separator_height: 5
    BoxLayout:
        orientation: "vertical"
        Label:
            font_size: 22
            halign: "center"
            text: "Are you sure you want\nto delete this e-mail?"
        AnchorLayout:
            anchor_x: "center"
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iCancel.png"
                on_release: root.dismiss()
        AnchorLayout:
            anchor_x: "center"
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iConfirm.png"
                on_release: root.delete_mail()
                on_release: root.dismiss()