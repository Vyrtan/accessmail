#:kivy 1.8

<DeletePopup>:
    size_hint: .5, .5
    auto_dismiss: False
    title: 'Löschen bestätigen'
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Möchten Sie diese E-Mail wirklich löschen?"
        AnchorLayout:
            anchor_x: "center"
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iCancel.png"
                on_release: root.dismiss()
        AnchorLayout:
            anchor_x: "center"
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iConfirm.png"
                on_release: root.deleteMail()
                on_release: root.dismiss()