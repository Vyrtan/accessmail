#:kivy 1.8

<AddContactPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    title: 'Add Contact'
    name: "None"
    address: "None"
    BoxLayout:
        orientation: "vertical"
        Label:
            #text: "Please enter name and email of your new contact:"
            text: "Bitte gib den Namen und die \nE-Mailadresse des neuen Kontakts ein:"
        TextInput:
            id: tname
            text: "Name"
        TextInput:
            id: taddress
            text: "E-Mail"
        Button:
            text: 'Hinzuf√ºgen'
            on_press: root.handOverInfo(tname.text, taddress.text)
        Button:
            text: 'Abbrechen'
            on_press: root.dismiss()