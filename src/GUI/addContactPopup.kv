#:kivy 1.8

<LoadDialog>:
    BoxLayout:
        size_hint: [None, None]
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

<AddContactPopup>:
    size_hint: [None, None]
    size: [600, 800]
    auto_dismiss: False
    title: 'Add Contact'
    title_color: (0,0,0,1)
    name: tname
    address: taddress
    file_chooser: file_chooser
    background: "GUI/Icons/white_bg_400x400.png"
    separator_height: 5
    BoxLayout:
        orientation: "vertical"
        Label:
            font_size: 22
            text: "Please enter the data \nof your new contact:"
            halign: "center"
        TextInput:
            id: tname
            text: "Name"
        TextInput:
            id: taddress
            text: "E-Mail"
        BoxLayout:
            FileChooserIconView:
                id: file_chooser
                filters: ['*.png', '*.jpg', '*.jpeg', '*.JPG', '*.JPEG']
                rootpath: "../CustomPictures/"
        AnchorLayout:
            anchor_x: "center"
            BoxLayout:
                size_hint: [None, None]
                Button:
                    size_hint: [None, None]
                    background_normal: "GUI/Icons/iConfirm.png"
                    on_release: root.add_contact()
                Button:
                    size_hint: [None, None]
                    background_normal: "GUI/Icons/iCancel.png"
                    on_release: root.dismiss()
