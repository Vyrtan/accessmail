#:kivy 1.8

<AddContactPopup>:
    size_hint: [None, None]
    size: [450, 600]
    auto_dismiss: False
    title: 'Add Contact'
    title_color: (0,0,0,1)
    name: tname
    address: taddress
    background: "GUI/Icons/white_bg_400x400.png"
    separator_height: 5
    BoxLayout:
        orientation: "vertical"
        Label:
            font_size: 22
            text: "Please enter the \nname and E-Mail-Address\nof your new contact:"
            halign: "center"
        TextInput:
            id: tname
            text: "Name"
        TextInput:
            id: taddress
            text: "E-Mail"
        AnchorLayout:
            anchor_x: "center"
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iConfirm.png"
                on_release: root.add_contact()
        AnchorLayout:
            anchor_x: "center"
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iCancel.png"
                on_release: root.dismiss()