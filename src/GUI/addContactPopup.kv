#:kivy 1.8

<AddContactPopup>:
    size_hint: [None, None]
    size: [400, 600]
    auto_dismiss: False
    title: 'Add Contact'
    name: "None"
    address: "None"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Bitte gib den Namen und die \nE-Mailadresse des neuen Kontakts ein:"
        TextInput:
            id: tname
            text: "Name"
        TextInput:
            id: taddress
            text: "E-Mail"
        AnchorLayout:
            anchor_x: "center"
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iConfirm.png"
                on_release: root.handOverInfo(tname.text, taddress.text)
        AnchorLayout:
            anchor_x: "center"
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iCancel.png"
                on_release: root.dismiss()