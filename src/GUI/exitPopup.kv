#:kivy 1.8

<ExitPopup>:
    size_hint: [None, None]
    size: 400,400
    auto_dismiss: False
    title: 'Confirm exit'
    title_color: (0,0,0,1)
    #using a white background image because popup's background_color attribute changes everything BUT the popup
    background: "GUI/Icons/white_bg_400x400.png"
    separator_height: 5
    BoxLayout:
        orientation: "vertical"
        AnchorLayout:
            anchor_x: "center"
            Label:
                font_size: 22
                halign: "center"
                text: "Are you sure you want to\nexit this program?"
        AnchorLayout:
            anchor_x: "center"
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iCancel.png"
                on_release: root.dismiss()
        AnchorLayout:
            anchor_x: "center"
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iConfirm.png"
                on_release: exit()