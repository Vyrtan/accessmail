#:kivy 1.8

<ExitPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    title: 'Confirm'
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Do you really want to exit?"
        Button:
            text: 'No'
            on_press: root.dismiss()
        Button:
            text: 'Yes'
            on_press: exit()