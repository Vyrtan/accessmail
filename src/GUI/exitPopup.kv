#:kivy 1.8

<ExitPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    title: 'Verlassen bestätigen'
    BoxLayout:
        orientation: "vertical"
        AnchorLayout:
            anchor_x: "center"
            Label:
                text: "Möchten Sie das Programm wirklich verlassen?"
        AnchorLayout:
            anchor_x: "center"
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iCancel.png"
                on_release: root.dismiss()
        AnchorLayout:
            anchor_x: "center"
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iConfirm.png"
                on_release: exit()