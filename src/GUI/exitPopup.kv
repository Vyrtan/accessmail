#:kivy 1.8

<ExitPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    title: 'Verlassen bestätigen'
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Möchten Sie das Programm wirklich verlassen?"
        Button:
            text: 'Nein'
            on_press: root.dismiss()
        Button:
            text: 'Ja'
            on_press: exit()