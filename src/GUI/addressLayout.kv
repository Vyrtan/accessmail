#:kivy 1.7.2

<ContactEntry@BoxLayout>:
    Button:
        text: "Write Email"
    Button:
        text: "Delete"
    Label:
        text: "Name"
    Label:
        text: "E-Mail"

<AddressLayout>:
    grid: grid
    add: False
    GridLayout:
        cols: 1
        Label:
            id: label
            size_hint: [1, 0.1]
            color: (0,0,0,1)
            disabled_color: (0,0,0,1)
            bold: True
            font_size: 40
            text: "Adressbuch"
        BoxLayout:
            orientation: "horizontal"
            size_hint: [1, 0.1]
            spacing: root.width / 6
            padding: [root.width / 6, 0]
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iPrevious.png"
                on_press: root.previousPage()
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iAdd.png"
                on_press: root.addNewContact()
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iNext.png"
                on_press: root.nextPage()
        GridLayout:
            id: grid
            cols: 1
            size_hint: [1, 0.7]