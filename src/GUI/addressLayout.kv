#:kivy 1.7.2

<ContactEntry@BoxLayout>:
    Button:
        text: "Write Email"
    Button:
        text: "Delete"
    Label:
        text: "Name"
    Label:
        text: "E-Mail"

<AddressLayout>:
    grid: grid
    GridLayout:
        cols: 1
        Label:
            id: label
            size_hint: [1, 0.1]
            color: (0,0,0,1)
            disabled_color: (0,0,0,1)
            bold: True
            font_size: 40
            text: "Address book"
        BoxLayout:
            orientation: "horizontal"
            size_hint: [1, 0.1]
            Button:
                text: "Previous Page"
            Button:
                text: "Add Contact"
            Button:
                text: "Next Page"
        GridLayout:
            id: grid
            cols: 1
            size_hint: [1, 0.7]