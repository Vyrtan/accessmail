#:kivy 1.8

<EmailEntry@BoxLayout>:
    Button:
        text: "Open"
    Button:
        text: "Delete"
    Button:
        text: "Add Contact"
    Label:
        text: "Author"
    Label:
        text: "Subject"

<OverviewLayout>:
    GridLayout:
        cols: 1
        spacing: 5
        Label:
            text: "Overview"
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Previous Page"
            Button:
                text: "Next Page"
        ListView:
            size_hint: .8, .8
            item_strings: [str(index) for index in range(100)]