#:kivy 1.8

<Label>
    color: (0,0,0,1)
    disabled_color: (0,0,0,1)

<OverviewLayout>:
    grid: grid
    GridLayout:
        cols: 1
        spacing: 5
        Label:
            id: label
            size_hint: [1, 0.1]
            bold: True
            font_size: 40
            text: "Übersicht"
        BoxLayout:
            id: ext_navigation
            size_hint: [1, 0.1]
            orientation: "horizontal"
            Button:
                text: "Ungelesen"
                on_press: root.switch_to("Not Read")
            Button:
                text: "Alle"
                on_press: root.switch_to("All")
            Button:
                text: "Gesendet"
                on_press: root.switch_to("Sent")
        GridLayout:
            id: grid
            cols: 1
            size_hint: [1, 0.7]
        BoxLayout:
            id: int_navigation
            size_hint: [1, 0.1]
            orientation: "horizontal"
            AnchorLayout:
                alignment: center
                Button:
                    text: "Vorherige Seite"
                    on_press: root.previous_page()
            Button:
                text: "Nächste Seite"
                on_press: root.next_page()