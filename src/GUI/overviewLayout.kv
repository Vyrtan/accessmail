<Label>
    color: (0,0,0,1)
    disabled_color: (0,0,0,1)

<OverviewLayout>:
    grid: grid
    GridLayout:
        cols: 1
        spacing: 5
        Label:
            id: label
            size_hint: [1, 0.1]
            bold: True
            font_size: 40
