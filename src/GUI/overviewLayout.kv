        GridLayout:
            id: grid
            cols: 1
            size_hint: [1, 0.7]
        BoxLayout:
            id: int_navigation
            size_hint: [1, 0.1]
            orientation: "horizontal"
            spacing: root.width / 6
            padding: [root.width / 6, 0]
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iPrevious.png"
                on_release: root.previous_page()
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iRefresh.png"
                on_release: root.scheduledMailCheck("lol")
            Button:
                size_hint: [None, None]
                background_normal: "GUI/Icons/iNext.png"
                on_release: root.next_page()
            Label:
                bold: True
                font_size: 24
                text: root.pageCount