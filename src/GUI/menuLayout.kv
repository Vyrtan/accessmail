#:kivy 1.7.2

<Button>:
    color: .8, .9, 0, 1
    font_size: 16


<MenuLayout>:
    buttons: [overBtn, readBtn, writeBtn, contactBtn, exitBtn]
    BoxLayout:
        orientation: "horizontal"
        spacing: 10

        GridLayout:
            cols: 1
            Button:
                id: overBtn
                text: "Overview"
                on_press: root.parent.show_layout("Overview")
            Button:
                id: readBtn
                text: "Read"
                on_press: root.parent.show_layout("Read")
            Button:
                id: writeBtn
                text: "Write"
                on_press: root.parent.show_layout("Write")
            Button:
                id: contactBtn
                text: "Contacts"
                on_press: root.parent.show_layout("Address")
            Button:
                id: exitBtn
                text: "Exit"
                on_press: exit()
