#:kivy 1.7.2

<Button>:
    color: .8, .9, 0, 1
    font_size: 16


<MenuLayout>:
    buttons: [inboxBtn, outboxBtn, writeBtn, contactBtn, exitBtn]
    inboxBtn: inboxBtn
    outboxBtn: outboxBtn
    writeBtn: writeBtn
    contactBtn: contactBtn
    exitBtn: exitBtn

    BoxLayout:
        orientation: "horizontal"
        spacing: 10

        #change file paths so they are OS-independent
        GridLayout:
            cols: 1
            BoxLayout:
                padding: 25
                Button:
                    id: inboxBtn
                    tooltip: "See all received e-mails"
                    size_hint: [None, None]
                    background_normal: "GUI/Icons/iInbox.png"
                    on_release: root.parent.show_layout("Inbox")
            BoxLayout:
                padding: 25
                Button:
                    id: outboxBtn
                    tooltip: "See all sent e-mails"
                    size_hint: [None, None]
                    background_normal: "GUI/Icons/iOutbox.png"
                    on_release: root.parent.show_layout("Outbox")
            BoxLayout:
                padding: 25
                Button:
                    id: writeBtn
                    tooltip: "Write a new e-mail"
                    size_hint: [None, None]
                    background_normal: "GUI/Icons/iWrite.png"
                    on_release: root.parent.show_layout("Write")
            BoxLayout:
                padding: 25
                Button:
                    id: contactBtn
                    tooltip: "See all contacts"
                    size_hint: [None, None]
                    background_normal: "GUI/Icons/iContacts.png"
                    on_release: root.parent.show_layout("Address")
            BoxLayout:
                padding: 25
                Button:
                    id: settingsBtn
                    tooltip: "Change settings"
                    size_hint: [None, None]
                    text: ""
                    background_normal: "GUI/Icons/iSettings.png"
                    on_release: root.parent.show_layout("Settings")
            BoxLayout:
                padding: 25
                Button:
                    id: exitBtn
                    tooltip: "Leave the application"
                    size_hint: [None, None]
                    background_normal: "GUI/Icons/iCancel.png"
                    background_down: "GUI/Icons/app_exit_down.png"
                    on_release: root.parent.on_exit_press()
