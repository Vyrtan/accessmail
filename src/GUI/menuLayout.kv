#:kivy 1.7.2

<Button>:
    color: .8, .9, 0, 1
    font_size: 16


<MenuLayout>:
    buttons: [overBtn, readBtn, writeBtn, contactBtn, exitBtn]
    BoxLayout:
        orientation: "horizontal"
        spacing: 10

        #change file paths so they are OS-independent
        GridLayout:
            cols: 1
            Button:
                id: overBtn
                background_normal: "GUI/Icons/app_overview.png"
                on_release: root.parent.show_layout("Overview")
            Button:
                id: readBtn
                background_normal: "GUI/Icons/app_read.png"
                on_release: root.parent.show_layout("Read")
            Button:
                id: writeBtn
                background_normal: "GUI/Icons/app_write.png"
                on_release: root.parent.show_layout("Write")
            Button:
                id: contactBtn
                background_normal: "GUI/Icons/app_addressbook.png"
                on_release: root.parent.show_layout("Address")
            Button:
                id: exitBtn
                background_normal: "GUI/Icons/app_exit.png"
                background_down: "GUI/Icons/app_exit_down.png"
                on_release: root.parent.on_exit_press()
