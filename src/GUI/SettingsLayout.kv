#:kivy 1.8

<Label>
    color: (0,0,0,1)
    disabled_color: (0,0,0,1)

<SettingsLayout>:
    grid: grid
    txt_colourblind: txt_colourblind
    txt_nbr_mails: txt_nbr_mails
    txt_nbr_addresses: txt_nbr_addresses
    txt_font_size: txt_font_size
    GridLayout:
        cols: 1
        spacing: 5
        Label:
            id: label
            size_hint: [1, 0.1]
            bold: True
            font_size: 40
            text: "Settings"
        GridLayout:
            id: grid
            cols: 1
            size_hint: [1, 0.9]
            # add settings here
            BoxLayout:
                size_hint: [1, 0.2]
                Label:
                    text: "Colourblind mode:"
                TextInput:
                    id: txt_colourblind
                    text: ""
                    tooltip: "(De)Activate colourblind mode"
            BoxLayout:
                size_hint: [1, 0.2]
                Label:
                    text: "Numbers of E-mails displayed:"
                TextInput:
                    id: txt_nbr_mails
                    text: ""
                    tooltip: "Define number of e-mails displayed"
            BoxLayout:
                size_hint: [1, 0.2]
                Label:
                    text: "Numbers of Contacts displayed:"
                TextInput:
                    id: txt_nbr_addresses
                    text: ""
                    tooltip: "Define number of contacts displayed"
            BoxLayout:
                size_hint: [1, 0.2]
                Label:
                    text: "Font size:"
                TextInput:
                    id: txt_font_size
                    text: ""
                    tooltip: "Set the font size"
            BoxLayout:
                size_hint: [None, None]
                orientation: "horizontal"
                BoxLayout:
                    size_hint: [None, None]
                    Button:
                        text: ""
                        tooltip: "Discard changes"
                        background_normal: "GUI/Icons/iCancel.png"
                        on_release: root.discard_changes()
                BoxLayout:
                    size_hint: [None, None]
                    Button:
                        text: "Reset"
                        tooltip: "Reset the whole program"
                        on_release: root.reset_program()
                BoxLayout:
                    size_hint: [None, None]
                    Button:
                        text: ""
                        tooltip: "Save changes"
                        background_normal: "GUI/Icons/iConfirm.png"
                        on_release: root.save_settings()
