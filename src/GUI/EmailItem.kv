#:kivy 1.8

<Label>
    color: (0,0,0,1)

<EmailItem>:
    orientation: "horizontal"
    root: root
    #sizehint does not work
    size_hint: [1, 0.1]
    Label:
        text: root.name
    Label:
        text: root.email
    Label:
        text: root.subject
    Button:
        text: ""
        size_hint: [0.3, 1]
        background_normal: "GUI/Icons/iRead.png"
        on_press: root.trigger_read()
    Button:
        text: "Antworten"
        background_normal: "GUI/Icons/iReply.png"
        size_hint: [0.3, 1]
        on_press: root.trigger_reply()
    Button:
        text: "LÃ¶schen"
        background_normal: "GUI/Icons/iCancel.png"
        size_hint: [0.3, 1]
        on_press: root.trigger_delete()
