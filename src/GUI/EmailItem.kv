#:kivy 1.8

<Label>
    color: (0,0,0,1)

<EmailItem>:
    canvas:
        Color:
            rgba: (0, 0, 0, 0.2) if not root.grey else (0, 0, 0, 0)
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
    orientation: "horizontal"
    root: root
    #sizehint does not work
    size_hint: [1, None]
    Label:
        bold: not root.read
        font_size: 16
        text: root.name
    Label:
        bold: not root.read
        font_size: 16
        text: root.email
    Label:
        bold: not root.read
        font_size: 16
        text: root.subject
    Button:
        size_hint: [None, None]
        tooltip: "Read this e-mail"
        background_normal: "GUI/Icons/iRead.png"
        on_press: root.trigger_read()
    Button:
        background_normal: "GUI/Icons/iReply.png"
        tooltip: "Reply to this e-mail"
        size_hint: [None, None]
        on_press: root.trigger_reply()
    Button:
        background_normal: "GUI/Icons/iCancel.png"
        tooltip: "Delete this e-mail"
        size_hint: [None, None]
        on_press: root.trigger_delete()
