#:kivy 1.7.2

<WriteLayout>:
    BoxLayout:
        orientation: "vertical"
        Label:
            id: label
            size_hint: [1, 0.2]
            color: (0,0,0,1)
            disabled_color: (0,0,0,1)
            bold: True
            font_size: 40
            text: "Write"
        BoxLayout:
            orientation: "vertical"

            GridLayout:
                size_hint: [1, 0.1]
                rows: 1
                Button:
                    text: "Previous"
                Button:
                    text: "Save"
                Button:
                    text: "Next"
            TextInput:
                text: "Input"

