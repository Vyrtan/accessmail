#:kivy 1.7.2

<WriteLayout>:
    mailText: mailText
    sendTo: sendTo
    subject: subject
    BoxLayout:
        orientation: "vertical"
        Label:
            id: label
            size_hint: [1, 0.2]
            color: (0,0,0,1)
            disabled_color: (0,0,0,1)
            bold: True
            font_size: 40
            text: "Write"
        BoxLayout:
            orientation: "vertical"
            GridLayout:
                size_hint: [1, 0.1]
                rows: 1
                Label:
                    size_hint: [0.2, 1]
                    text: "To:"
                TextInput:
                    id: sendTo
                    text: ""
                    multiline: False
                TextInput:
                    id: subject
                    text: ""
                    multiline: False
            TextInput:
                id: mailText
                text: ""
            GridLayout:
                size_hint: [1, 0.1]
                rows: 1
                Button:
                    text: "Attach"
                Button:
                    text: "Add Contact"
                Button:
                    text: "Send"
                    on_press: root.send_mail()
            Label:
                size_hint: [0.2, 0.1]
                text: "Attached:"

