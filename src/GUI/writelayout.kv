#:kivy 1.7.2

<WriteLayout>:
    sendTo: sendTo
    subject: subject
    message: mailText
    BoxLayout:
        orientation: "vertical"
        Label:
            id: label
            size_hint: [1, 0.2]
            color: (0,0,0,1)
            disabled_color: (0,0,0,1)
            bold: True
            font_size: 40
            text: "Write e-mail"
        BoxLayout:
            orientation: "vertical"
            GridLayout:
                size_hint: [1, 0.1]
                rows: 1
                Label:
                    size_hint: [0.2, 1]
                    text: "To:"
                    bold: True
                TextInput:
                    id: sendTo
                    tooltip: "Enter the e-mail address here"
                    text: ""
                    font_size: root.text_size
                    # write_tab added in 1.9.0
                    # write_tab: False
                    multiline: False
                Label:
                    size_hint: [0.2, 1]
                    text: "Subject:"
                    bold: True
                TextInput:
                    id: subject
                    tooltip: "Enter the subject here"
                    text: ""
                    font_size: root.text_size
                    # write_tab: False
                    multiline: False
            Label:
                size_hint: [1, 0.1]
                halign: "right"
                bold: True
                text: "Your message:"
            TextInput:
                id: mailText
                tooltip: "Enter the message here"
                text: ""
                font_size: root.text_size
            GridLayout:
                size_hint: [1, 0.2]
                rows: 1
                #Button:
                #    text: "Attachments:"
                AnchorLayout:
                    anchor_x: "center"
                    Button:
                        size_hint: [None, None]
                        tooltip: "Send this e-mail"
                        background_normal: "GUI/Icons/iConfirm.png"
                        on_release: root.send_mail()
            #Label:
            #    size_hint: [0.2, 0.1]
            #    text: "Anh√§nge:"
            # simply use a popup with a filechooser

